<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include layout="@layout/list_file_name_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textview_padding_default" >

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="@dimen/list_app_icon_size"
            android:layout_height="@dimen/list_app_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:paddingLeft="@dimen/list_item_side_margin"
            android:scaleType="fitCenter"
            android:focusable="false"
            android:clickable="false" />

        <!-- style="@android:style/TextAppearance.Large" -->
        <TextView
            android:id="@+id/app_label"
            style="@style/list_text_item"
            android:layout_toRightOf="@id/app_icon"
            android:layout_alignParentTop="true"
            android:paddingTop="2dp"
            android:paddingLeft="@dimen/list_item_side_margin"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/list_app_label_text_size" />

        <TextView
            android:id="@+id/app_boot_flag"
            style="@style/list_text_item"
            android:layout_below="@id/app_label"
            android:layout_toRightOf="@id/app_icon"
            android:paddingTop="@dimen/list_subtitle_padding_top"
            android:paddingLeft="@dimen/list_item_side_margin"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/list_subtitle_text_size" />

        <TextView
            android:id="@+id/app_boot_time"
            style="@style/list_text_item"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/list_item_side_margin"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/list_app_label_text_size" />
    </RelativeLayout>

</LinearLayout>